---
import Layout from "../layout/Layout.astro";
import type { IProduct } from "../interface/types";

// Components
import ProductCard from "../components/ProductCard";

const res = await fetch("https://fakestoreapi.com/products");
const products = (await res.json()) as IProduct[];
---

<Layout title="Mini Shop">
  <h1 class="text-[#802f6e] font-bold text-[28px] mb-14">All products</h1>
  <div class="grid gap-4 pb-16 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 justify-center">
    {products.map((prod: IProduct) => <ProductCard client:visible product={prod} />)}
  </div>
</Layout>
